<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.trabajo_recuperacion.Controler">
    <top>
        <Label text="Gestión de Empleados" BorderPane.alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #2c3e50; -fx-text-fill: white;">
            <font>
                <Font name="Inter Bold" size="24.0" />
            </font>
        </Label>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-background-color: white; -fx-padding: 20;">
            <tabs>
                <!-- TAB AÑADIR EMPLEADO -->
                <Tab text="Añadir Empleado">
                    <content>
                        <AnchorPane style="-fx-background-color: white; -fx-padding: 30;">
                            <children>
                                <VBox layoutX="50" layoutY="50" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                                    <children>
                                        <HBox spacing="15">
                                            <children>
                                                <Label text="Nombre" style="-fx-font-weight: bold; -fx-font-size: 14;">
                                                    <font><Font name="Inter Regular" size="14.0" /></font>
                                                </Label>
                                                <TextField fx:id="txtFieldNombre" prefWidth="200" style="-fx-background-radius: 3; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="15">
                                            <children>
                                                <Label text="Puesto" style="-fx-font-weight: bold; -fx-font-size: 14;">
                                                    <font><Font name="Inter Regular" size="14.0" /></font>
                                                </Label>
                                                <ComboBox fx:id="Puesto" prefWidth="200" style="-fx-background-radius: 3; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;">
                                                    <items>
                                                        <FXCollections fx:factory="observableArrayList">
                                                            <String fx:value="Scada Manager" />
                                                            <String fx:value="Sales Manager" />
                                                            <String fx:value="Product Owner" />
                                                            <String fx:value="Product Manager" />
                                                            <String fx:value="Analyst Programmer" />
                                                            <String fx:value="Junior Programmer" />
                                                        </FXCollections>
                                                    </items>
                                                </ComboBox>
                                            </children>
                                        </HBox>

                                        <HBox spacing="15">
                                            <children>
                                                <Label text="Salario" style="-fx-font-weight: bold; -fx-font-size: 14;">
                                                    <font><Font name="Inter Regular" size="14.0" /></font>
                                                </Label>
                                                <TextField fx:id="FieldtextSalario" prefWidth="200" style="-fx-background-radius: 3; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />
                                            </children>
                                        </HBox>

                                        <Button fx:id="añadirEmpleado" onAction="#añadirEmpleado" prefWidth="150" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-cursor: hand; -fx-font-size: 14; -fx-padding: 8;" text="Insertar">
                                            <font><Font name="Inter Regular" size="14.0" /></font>
                                        </Button>
                                    </children>
                                </VBox>

                                <ImageView fitHeight="300" fitWidth="350" layoutX="500" layoutY="100" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../images/2.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- TAB CONSULTAR -->
                <Tab text="Consultar">
                    <content>
                        <AnchorPane style="-fx-background-color: white; -fx-padding: 30;">
                            <children>
                                <ListView fx:id="listViewTrabajadores" layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="300.0" style="-fx-background-radius: 3; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />

                                <Button fx:id="ButtonRefrescar" layoutX="370.0" layoutY="50.0" onAction="#clickrefrescar" prefWidth="50.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-cursor: hand; -fx-font-size: 16;" text="↺" />

                                <VBox layoutX="450.0" layoutY="50.0" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                                    <children>
                                        <HBox spacing="10">
                                            <Label text="ID:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                                            <Label fx:id="ConsultarID" prefWidth="150" style="-fx-background-color: #f8f9fa; -fx-padding: 8; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />
                                        </HBox>
                                        <HBox spacing="10">
                                            <Label text="Nombre:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                                            <Label fx:id="ConsultarNombre" prefWidth="150" style="-fx-background-color: #f8f9fa; -fx-padding: 8; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />
                                        </HBox>
                                        <HBox spacing="10">
                                            <Label text="Puesto:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                                            <Label fx:id="ConsultarPuesto" prefWidth="150" style="-fx-background-color: #f8f9fa; -fx-padding: 8; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />
                                        </HBox>
                                        <HBox spacing="10">
                                            <Label text="Salario:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                                            <Label fx:id="ConsultarSueldo" prefWidth="150" style="-fx-background-color: #f8f9fa; -fx-padding: 8; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />
                                        </HBox>
                                        <HBox spacing="10">
                                            <Label text="Fecha de Alta:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                                            <Label fx:id="ConsultarFecha" prefWidth="150" style="-fx-background-color: #f8f9fa; -fx-padding: 8; -fx-border-radius: 3; -fx-border-color: #e0e0e0; -fx-font-size: 14;" />
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="15">
                                            <Button fx:id="buttonModificar" onAction="#modificarButton" text="Editar" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-cursor: hand; -fx-font-size: 14; -fx-padding: 8;" />
                                            <Button fx:id="buttonEliminar" onAction="#eliminarTrabajador" text="Eliminar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5px; -fx-border-radius: 5px; -fx-cursor: hand; -fx-font-size: 14; -fx-padding: 8;" />
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
